<%= form_for @person do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %></br>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %></br>
  <%= f.label :phone %>
  <%= f.text_field :phone %></br>

  <%= f.fields_for :address do |address| %>
    <%= address.label :street_address %>
    <%= address.text_field :street_address %></br>
    <%= address.label :city %>
    <%= address.text_field :city %></br>
    <%= address.label :state %>
    <%= address.text_field :state %></br>
    <%= address.label :zip %>
    <%= address.text_field :zip %></br>

  <% end %>
  <%= f.submit %>
<% end %>
